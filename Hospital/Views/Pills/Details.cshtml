@section containerFluid
{
    <div class="col-sm-12 col-md-12 col-lg-12">
        <!-- product -->
        <div class="product-content product-wrap clearfix product-deatil">
            <div class="row">
                <div class="col-md-5 col-sm-12 col-xs-12">
                    <div class="product-image">
                        <div id="myCarousel-2" class="carousel slide">
                            <div class="carousel-inner">
                                <div class="item active">
                                    <img src="~/Pictures/Pills/@Model.Picture" class="img-responsive" alt="" width="500"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-md-offset-1 col-sm-12 col-xs-12">
                    <h2 class="name">
                        @Model.Name
                        <small>Виробник - @Model.Producer</small>
                    </h2>
                    <hr />
                    <h3 class="price-container">
                        @Model.Price₴
                    </h3>
                    <div class="certified">
                        <ul>
                            <li>
                                <a href="javascript:void(0);">Час доставки<span>7 робочих днів</span></a>
                            </li>
                            <li >
                                <a href="javascript:void(0);">Сертифікований<span>Якість гарантована</span></a>
                            </li>
                        </ul>
                    </div>
                    <hr />
                    <div class="description description-tabs">
                        <ul id="myTab" class="nav nav-pills">
                            <li><a class="btn btn-primary no-margin" href="#more-information" data-toggle="tab">Лікарський засіб</a></li>
                            <li class="ms-2"><a class="btn btn-primary no-margin ml-4" href="#specifications" data-toggle="tab">Лікарська форма</a></li>
                        </ul>
                        <div id="myTabContent" class="tab-content">
                            <div class="tab-pane fade active in" id="more-information">
                                <h5><strong>Лікарський засіб</strong></h5>
                                <h5>
                                    @Model.FormFactor
                                </h5>
                            </div>
                            <div class="tab-pane fade" id="specifications">
                                <h5><strong>Лікарська форма</strong></h5>
                                <h5>
                                    @Model.DosageForm
                                </h5>
                            </div>
                            
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-sm-12 col-md-6 col-lg-6 mt-4">
                            <a href="javascript:void(0);" class="btn btn-success btn-lg">Додати до кошика (@Model.Price₴)</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- end product -->
    </div>
}